@model List<MVC_OrderTrackingApp.Models.Product>

<h1 align="center">Ürünler</h1>


<div align="center">
	<table border="1" cellpadding="8" cellspacing="0">
		<thead>
			<tr>
				<th>Ürün Adı</th>
				<th>Ürün Fiyatı</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{

				<tr>
					<td>@product.ProductName</td>
					<td>@product.UnitPrice</td>
					<td><a href="/product/details/@product.ProductId">Ürün Detay</a></td>
				</tr>
			}
		</tbody>
	</table>
</div>